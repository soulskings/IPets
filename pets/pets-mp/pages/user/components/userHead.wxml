<!--pages/user/components/userHead.wxml-->
<view class="head">
    <!--头像-->
    <view wx:if="{{userInfo.nickName}}" class="user-info"><!--  && !!token -->
        <image class="head-sculpture" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="user-name">{{userInfo.nickName}}</text>
    </view>
    <view wx:else class="user-info">
        <image class="head-sculpture" src="../../../images/logo.jpeg" background-size="cover"></image>
        <button bindgetuserinfo="authorizeFn" class="info weui-btn mini-btn" plain="true" size="mini" open-type="getUserInfo">获取头像昵称</button>
        <!-- <button wx:if="{{isAuthorize}}" class="weui-btn mini-btn" plain="true" size="mini" bindtap="login">点击登录</button> -->
    </view>
</view>
