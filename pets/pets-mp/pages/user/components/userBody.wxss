.list-box {
  border-top: 20rpx solid #f9f9fa;
  border-bottom: 20rpx solid #f9f9fa;
}
.list {
    display: flex;
    align-items: center;
    height: 120rpx;
}

.list .list-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 50rpx;
}
.list .list-name {
  position: relative;
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  padding-top: 2rpx;
  color: #333;
  border-bottom: 1rpx solid #f1f1f1;
}
.list:last-child .list-name {
  border-bottom: none;
}
.list .list-name::after{
  content: '';
  border-right: 1rpx solid #c8c7cc;
  border-bottom: 1rpx solid #c8c7cc;
  position: absolute;
  top: 50rpx;
  right: 50rpx;
  width: 20rpx;
  height: 20rpx;
  transform: rotateZ(-45deg);
}
.sign-btn{
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  margin: 200rpx 40rpx 0;
  border-radius: 30rpx;
}
.sign-out {
 background-color: #ccc;
}
.sign-login {
  background-color: #feca2b;
}