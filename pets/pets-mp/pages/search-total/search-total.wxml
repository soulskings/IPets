<view class="view-report">
  <view class="search-warp">
    <view class="search">
      <image class="search-icon" src="./img/search.png" />
      <input
        class="input"
        placeholder="搜索宠物"
        bindinput="inputMethod"
      />
      <view
        class="cancle"
        bindtap="backMethod"
      >取消</view>
    </view>
  </view>
  <scroll-view class="scroll-content" scroll-y bindscrolltolower="loadmoreMethod">
    <search-pet petList="{{petList}}" tag="{{tag}}"></search-pet>
    <search-article articleList="{{articleList}}"></search-article>
    <mp-loading
      show="{{loadmore}}"
      type="circle"
      tips="加载中"
      ext-class="loadmore"
    ></mp-loading>
    <view wx:if="{{noMore}}" class="no-more">没有更多文章啦！</view>
  </scroll-view>
</view>