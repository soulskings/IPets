/* pages/search/search.wxss */
.search-warp {
  border-bottom: 1px solid #f3f5f7;
}

.search {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 660rpx;
  height: 88rpx;
  margin: 0 auto;
}

.input {
  width: 660rpx;
  height: 60rpx;
  border-radius: 30rpx;
  padding-left: 90rpx;
  font-size: 26rpx;
  background: #f7f7f7;
}

.search-icon {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  left: 30rpx;
  top: 28rpx;
  z-index: 2;
}

.cancle {
  width: 80rpx;
  display: flex;
  align-items: center;
  height: 100%;
  font-size: 25rpx;
  margin-left: 25rpx;
}

.search-item {
  display: flex;
  padding: 30rpx 60rpx;
  border-bottom: 1px solid #f3f5f7;
}

.item-img {
  width: 150rpx;
  height: 150rpx;
}

.img {
  width: 100%;
  height: 100%;
}

.item-txt {
  flex: 1;
  padding-left: 50rpx;
  font-size: 28rpx;
}

.txt {
  color: #333;
  padding-bottom: 30rpx;
}

.tag {
  display: flex;
  flex-wrap: wrap;
}

.tag-item {
  background: #fff;
  padding: 5rpx 0;
  margin-bottom: 10rpx;
  border-radius: 13rpx;
  /* color: #ff9d00; */
  color: #666;
  font-size: 24rpx;
}

.fx {
  padding: 0 12rpx;
}

.price {
  font-size: 22rpx;
}